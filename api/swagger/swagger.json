{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "템플릿 API",
    "description": "템플릿 API 명세"
  },
  "servers": [
    {
      "url": "http://localhost:4000/v1",
      "description": "로컬계"
    }
  ],
  "paths": {
    "/post/query": {
      "get": {
        "tags": [
          "post"
        ],
        "summary": "게시글 목록",
        "description": "게시글 목록 데이터 불러오기",
        "responses": {
          "200": {
            "description": "성공시 데이터 반환",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PostVO"
                  }
                }
              }
            }
          },
          "500": {
            "description": "내부 에러"
          }
        }
      }
    },
    "/post/query/{seq}": {
      "get": {
        "tags": [
          "post"
        ],
        "summary": "게시글 상세",
        "description": "게시글 단 건 불러오기",
        "parameters": [
          {
            "name": "seq",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "게시글 번호"
          }
        ],
        "responses": {
          "200": {
            "description": "성공시 데이터 반환",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostVO"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/PostVO"
                }
              }
            }
          },
          "400": {
            "description": "올바르지 않은 파라미터"
          },
          "404": {
            "description": "조회되는 데이터가 없음"
          },
          "500": {
            "description": "내부 에러"
          }
        }
      }
    },
    "/post/command": {
      "post": {
        "tags": [
          "post"
        ],
        "summary": "게시글 작성",
        "description": "게시글 생성하기",
        "responses": {
          "201": {
            "description": "작성 성공"
          },
          "400": {
            "description": "올바르지 않은 파라미터"
          },
          "500": {
            "description": "내부 에러"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePostVO"
              },
              "examples": {
                "example": {
                  "$ref": "#/components/examples/CreatePostVO"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "post"
        ],
        "summary": "게시글 수정",
        "description": "게시글 업데이트하기",
        "responses": {
          "200": {
            "description": "수정 성공"
          },
          "400": {
            "description": "올바르지 않은 파라미터"
          },
          "404": {
            "description": "수정할 참조 데이터가 없음"
          },
          "500": {
            "description": "내부 에러"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePostVO"
              },
              "examples": {
                "example": {
                  "$ref": "#/components/examples/UpdatePostVO"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "post"
        ],
        "summary": "게시글 삭제",
        "description": "게시글 삭제하기",
        "parameters": [
          {
            "name": "seq",
            "description": "게시글 번호",
            "required": true,
            "in": "query",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "삭제 성공"
          },
          "400": {
            "description": "올바르지 않은 파라미터"
          },
          "404": {
            "description": "삭제할 참조 데이터가 없음"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PostVO": {
        "type": "object",
        "properties": {
          "seq": {
            "type": "number",
            "example": 0
          },
          "title": {
            "type": "string",
            "example": "제목"
          },
          "content": {
            "type": "string",
            "example": "내용"
          }
        },
        "xml": {
          "name": "PostVO"
        }
      },
      "CreatePostVO": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "제목"
          },
          "content": {
            "type": "string",
            "example": "내용"
          }
        },
        "required": [
          "title",
          "content"
        ],
        "xml": {
          "name": "CreatePostVO"
        }
      },
      "UpdatePostVO": {
        "type": "object",
        "properties": {
          "seq": {
            "type": "number",
            "example": 0
          },
          "title": {
            "type": "string",
            "example": "제목"
          },
          "content": {
            "type": "string",
            "example": "내용"
          }
        },
        "required": [
          "seq",
          "title",
          "content"
        ],
        "xml": {
          "name": "UpdatePostVO"
        }
      }
    },
    "examples": {
      "CreatePostVO": {
        "value": {
          "title": "제목",
          "content": "내용"
        },
        "summary": "작성할 게시글 객체"
      },
      "UpdatePostVO": {
        "value": {
          "seq": 0,
          "title": "제목",
          "content": "내용"
        },
        "summary": "수정할 게시글 객체"
      }
    }
  }
}